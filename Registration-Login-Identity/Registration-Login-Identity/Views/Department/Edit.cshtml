@model Registration_Login_Identity.Models.Department

    

    <div class="row">
        <div class=" col-6">
            <form asp-controller="Department" asp-action="Update" method="post">

                <div class="form-group">

                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="DeptName"></label>
                    <input type="text" asp-for="DeptName" />
                </div>
               
                <div class="form-group">

                    <input type="submit" value="Update" class="btn btn-primery btn-block" />
                </div>



            </form>

        </div>
    </div>